<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.googlecode.stk.android.backlog" android:versionCode="1"
	android:versionName="0.0.1-SNAPSHOT">
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<application android:name=".BacklogApplication"
		android:icon="@drawable/icon" android:label="@string/app_name"
		android:debuggable="true">
		<activity android:name=".activity.TopActivity_" android:theme="@style/Theme.ListView">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.SettingActivity_"
			android:theme="@android:style/Theme.Light" />
		<activity android:name=".activity.TimelineActivity_"
			android:theme="@android:style/Theme.Light" />
		<activity android:name=".activity.IssueDetailActivity_"
			android:theme="@android:style/Theme.Light" />
		
	</application>
	<uses-sdk android:minSdkVersion="8"></uses-sdk>

</manifest>