<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/project_row_back"
	android:paddingLeft="2px"
	android:paddingRight="2px"
	android:paddingBottom="1px"
	android:paddingTop="1px"
	android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:orientation="horizontal" android:baselineAligned="true">
    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:src="@drawable/folder" android:id="@+id/folder"></ImageView>
    <TextView android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_width="match_parent" android:textStyle="bold" android:paddingBottom="2px" android:paddingLeft="2px" android:paddingRight="2px" android:textSize="20px" android:paddingTop="4px" android:id="@+id/projectName"></TextView>
</LinearLayout>
